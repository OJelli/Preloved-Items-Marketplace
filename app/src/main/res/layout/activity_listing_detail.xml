<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.listing.ListingDetailActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_action_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_detail_image"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_shopping_cart"
                    android:background="#EEEEEE"
                    android:contentDescription="Product Image" />

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/circular_background_white_faint"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:tint="@android:color/black"
                    android:contentDescription="Back"
                    android:padding="8dp"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="$450.00"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tv_detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Vintage Leather Sofa, Great Condition"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/tv_detail_category_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Category: Furniture | Posted: 1 day ago"
                    android:textSize="14sp"
                    android:textColor="#9E9E9E"
                    android:layout_marginBottom="24dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pickup Location"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:id="@+id/ll_pickup_location_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="8dp"
                    android:background="#F5F5F5"
                    android:layout_marginBottom="24dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/iv_detail_map_thumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="Map Thumbnail (Tap to Enlarge)"
                        android:background="#DDDDDD"
                        android:src="@drawable/ic_map_placeholder"/> <TextView
                    android:id="@+id/tv_listing_detail_location_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    tools:text="Tap to see map: Mid Valley Megamall (59200 KL)" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/ic_menu_compass"
                        android:background="@android:color/white"
                        android:contentDescription="Seller Avatar"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/tv_detail_seller_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Ahmed (Seller)"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_detail_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="This is a detailed description of the product. It covers condition, size, history of use, and any special notes the seller wants to share. The sofa is a genuine vintage piece, very comfortable, and has been in a non-smoking home. Dimensions: 80\ wide, 35\ deep."
                    android:textSize="16sp"
                    android:textColor="#333333"/>

                <Space android:layout_width="match_parent" android:layout_height="30dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bottom_action_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_wishlist"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@android:drawable/btn_star_big_off"
            android:background="@drawable/circular_background"
            android:contentDescription="Add to Wishlist"
            android:tint="#FF9800"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/btn_message_seller"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Message Seller"
            android:textColor="@android:color/white"
            android:backgroundTint="#4CAF50"
            android:textSize="18sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>