<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".ui.listing.PickupLocationActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Pickup Location"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose a public meeting spot for your transaction:"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"/>

    <Spinner
        android:id="@+id/spinner_pickup_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@android:drawable/btn_dropdown"
        android:layout_marginBottom="32dp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_map_placeholder"  android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:contentDescription="Map placeholder"/>

    <Button
        android:id="@+id/btn_confirm_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Location"
        android:backgroundTint="#4CAF50"
        android:textColor="@android:color/white"/>

</LinearLayout>